type hal_livedisplay_oppo_OP4A89, domain;
hal_server_domain(hal_livedisplay_oppo_OP4A89, hal_lineage_livedisplay)

type hal_livedisplay_oppo_OP4A89_exec, exec_type, vendor_file_type, file_type;
init_daemon_domain(hal_livedisplay_oppo_OP4A89)

# Allow hal_livedisplay_oppo_OP4A89 to use vendor-binder service
vndbinder_use(hal_livedisplay_oppo_OP4A89)

# Allow hal_livedisplay_oppo_OP4A89 to find qdisplay_service
allow hal_livedisplay_oppo_OP4A89 qdisplay_service:service_manager find;

# Allow hal_livedisplay_oppo_OP4A89 to call hal_sensors_default via binder
binder_call(hal_livedisplay_oppo_OP4A89, hal_graphics_composer_default)

# Allow hal_livedisplay_oppo_OP4A89 to write to DisplayMode nodes
allow hal_livedisplay_oppo_OP4A89 sysfs_graphics:dir r_dir_perms;
allow hal_livedisplay_oppo_OP4A89 sysfs_fod:file rw_file_perms;
allow hal_livedisplay_oppo_OP4A89 sysfs_livedisplay_tuneable:file rw_file_perms;

# Allow hal_livedisplay_oppo_OP4A89 to store files under /data/vendor/display and access them
allow hal_livedisplay_oppo_OP4A89 display_vendor_data_file:dir rw_dir_perms;
allow hal_livedisplay_oppo_OP4A89 display_vendor_data_file:file create_file_perms;

# Allow hal_livedisplay_oppo_OP4A89 to set vendor display prop
set_prop(hal_livedisplay_oppo_OP4A89, vendor_display_prop)
